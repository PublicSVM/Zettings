<Window x:Class="Zettings.ZettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zettings"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight" >
    <Grid Margin="0,0,10,10">
        <TextBlock x:Name="gameNameLabel" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="GameName:" VerticalAlignment="Top"/>
        <TextBox x:Name="gameName" HorizontalAlignment="Left" Height="23" Margin="90,9,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="errorLabel" HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" Text="Errors:" VerticalAlignment="Top"/>
        <TextBox x:Name="errors" HorizontalAlignment="Left" Height="23" Margin="90,37,0,0" TextWrapping="Wrap" Text="All is well =)" VerticalAlignment="Top" Width="120" IsReadOnly="True" Background="LightGray"/>
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" Margin="55,65,0,0" VerticalAlignment="Top" Width="75" Click="saveButton_Click"/>
        <Button x:Name="loadButton" Content="Load" HorizontalAlignment="Left" Margin="135,65,0,0" VerticalAlignment="Top" Width="75" Click="loadButton_Click"/>

    </Grid>
</Window>
